<header class = "navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("static_pages.home. header_title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("header.home"), root_path %></li>
        <li><%= link_to t("header.help"), help_path %></li>
        <li><%= link_to t("header.log_in"), login_path %></li>
        <li><%= link_to t("header.english"), locale: "en" %></li>
        <li><%= link_to t("header.vietnam"), locale: "vi" %></li>
         <% if logged_in? %>
          <li><%= link_to t("header.users"), '#' %></li>
          <li class="dropdown">
           <%= link_to "#", :title => t("header.account"), class: "dropdown-toggle",data: {toggle: 'dropdown'} do %>
              <b class="caret"></b>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("header.rofile"), current_user %></li>
              <li><%= link_to t("header.settings"), '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t("header.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
